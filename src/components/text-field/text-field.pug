mixin text-field(options = {})
  -
    const {
      label = '',
      placeholder = '',
      typeField = '',
      value = '',
      name = '',
      autocomplete = 'off',
      isDateMinimal = false,
      isHidden = false,
      hasTip = false,
      isFilterDate = false,
    } = options;

    const BASE_CLASS = 'text-field'
    const classDateMinimal = `${BASE_CLASS}__input_type_date-minimal`
    const filterDateName = `${BASE_CLASS}_type_filter-date`
    
  div(
    class=`${BASE_CLASS} js-${BASE_CLASS} ${(isFilterDate ? filterDateName : '')}`
    data-type = isHidden ? 'hidden' : ''
  )
    label(class=`${BASE_CLASS}__label`)
      if label
        =label
      
      input(
        class=`${BASE_CLASS}__input js-${BASE_CLASS}__input ${(isDateMinimal ? classDateMinimal: '')}` 
        type=typeField 
        placeholder=placeholder 
        value=value 
        name=name
        autocomplete=autocomplete
        )
        
      if hasTip
        img(class=`${BASE_CLASS}__tip js-${BASE_CLASS}__tip` src=require('./img/tip.svg') alt='уголок')