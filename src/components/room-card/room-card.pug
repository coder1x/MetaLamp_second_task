include ../rate-button/rate-button.pug

mixin room-card(options)
  -
    let rateName = options.rateName ?? 'room-1'
    let number = options.number ?? ''
    let price = options.price ?? ''
    let reviews = options.reviews ?? ''
    let lux = options.lux ?? false
    let modif = options.modif ?? ''
    let addClass = options.class ?? ''
    let classComp = 'room-card'
    let className = classComp
    if(modif){
    className += ' '+classComp+'_'+modif}
    if(addClass){
    className += ' '+addClass}
  article(class=className)
    div(class=classComp+'__slider-wrap')
      div(class=classComp+'__relation-ratio')
      a(class=classComp+'__link' href='https://test/test' aria-label='карточка номера')
        img(class=classComp+'__slide '+classComp+'__slide_visible' src=require('@com/room-card/img/image1.webp').default, alt='номер люкс')
        img(class=classComp+'__slide' src=require('@com/room-card/img/image2.webp').default, alt='номер люкс')
        img(class=classComp+'__slide' src=require('@com/room-card/img/image3.webp').default, alt='номер люкс')
        img(class=classComp+'__slide' src=require('@com/room-card/img/image4.webp').default, alt='номер люкс')
      div(class=classComp+'__dot-wrap')
      button(class=classComp+'__prev-wrap' aria-label='предыдущий слайд')
        img(class=classComp+'__prev' src=require('@com/room-card/img/expand_more.svg').default, alt='стрелка в лево')
      button(class=classComp+'__next-wrap' aria-label='следующий слайд')
        img(class=classComp+'__next' src=require('@com/room-card/img/expand_more.svg').default, alt='стрелка в право')
    a(class=classComp+'__header-wrap' href='https://test/test')
      div(class=classComp+'__number-wrap')
        span(class=classComp+'__header-num') №
        p(class=classComp+'__header')= number
        - if(lux){
        span(class=classComp+'__lux') люкс
        -}
      div(class=classComp+'__price-wrap')
        span(class=classComp+'__price')= price+'₽'
        span(class=classComp+'__price-text') в сутки
    div(class=classComp+'__rate-wrap')
      +rate-button({
        flLabel:true,
        name:rateName
        })
      div(class=classComp+'__reviews-wrap')
        span(class=classComp+'__reviews')= reviews
        span(class=classComp+'__reviews-text') Отзывов
