include ../star-rating/star-rating.pug

mixin room-card(options = {})
  -
    const {
      rateName = 'room-1',
      number = '',
      price = '',
      reviews = '',
      lux,
      modifier = '',
      addClass = '',
    } = options;

    const classComponent = 'room-card'
    let className = classComponent
    if(modifier){
      className += ` ${classComponent}_${modifier}`
    }
    if(addClass){
      className += ` ${addClass}`
    }

  article(class=`${className} js-${classComponent}`)

    div(class=`${classComponent}__slider-wrapper js-${classComponent}__slider-wrapper`)
      div(class=`${classComponent}__relation-ratio`)
      a(class=`${classComponent}__link js-${classComponent}__link` href='https://change-me' aria-label='карточка номера')
        img(class=`${classComponent}__slide ${classComponent}__slide_visible js-${classComponent}__slide` src=require('./img/beige-room.webp'), alt='номер люкс')
        img(class=`${classComponent}__slide js-${classComponent}__slide` src=require('./img/crimson-room.webp'), alt='номер люкс')
        img(class=`${classComponent}__slide js-${classComponent}__slide` src=require('./img/red-room.webp'), alt='номер люкс')
        img(class=`${classComponent}__slide js-${classComponent}__slide` src=require('./img/blue-room.webp'), alt='номер люкс')
      div(class=`${classComponent}__dot-wrapper js-${classComponent}__dot-wrapper`)
      button(class=`${classComponent}__prev-wrapper js-${classComponent}__prev-wrapper` aria-label='предыдущий слайд')
        img(class=`${classComponent}__prev` src=require('./img/expand-more.svg'), alt='стрелка в лево')
      button(class=`${classComponent}__next-wrapper js-${classComponent}__next-wrapper` aria-label='следующий слайд')
        img(class=`${classComponent}__next` src=require('./img/expand-more.svg'), alt='стрелка в право')

    a(class=`${classComponent}__header-wrapper` href='https://change-me')
      div(class=`${classComponent}__number-wrapper`)
        span(class=`${classComponent}__header-num`) №
        p(class=`${classComponent}__header`)= number
        - if(lux){
            span(class=`${classComponent}__lux`) люкс
        -}
      div(class=`${classComponent}__price-wrapper`)
        span(class=`${classComponent}__price`)= price+'₽'
        span(class=`${classComponent}__price-text`) в сутки
        
    div(class=`${classComponent}__rate-wrapper`)
      +star-rating({
        isLabeled:true,
        name:rateName
        })
      div(class=`${classComponent}__reviews-wrapper`)
        span(class=`${classComponent}__reviews`)= reviews
        span(class=`${classComponent}__reviews-text`) Отзывов
