mixin toggle(options = {})
  -
    const {
      header = '',
      label = '',
      modifier = '',
      addClass = '',
      isLabeled,
    } = options;

    const CLASS_COMPONENT = 'toggle'
    let className = CLASS_COMPONENT
    if(modifier){
      className += ` ${CLASS_COMPONENT}_${modifier}`
    }
    if(addClass){
      className += ` ${addClass}`
    }

  div(class=className)
    -if(!isLabeled){
        h2(class=`${CLASS_COMPONENT}__header`)= header
    -}
    
    div(class=`${CLASS_COMPONENT}__wrapper`)
      label(class=`${CLASS_COMPONENT}__label`)= label
        input(class=`${CLASS_COMPONENT}__input` type='checkbox' name='toggle')
        span(class=`${CLASS_COMPONENT}__before`)

