mixin range-slider(options)
  -
    let label = options.label ?? ''
    let modify = options.modify ?? ''
    let addClass = options.class ?? ''
    let flLabel = options.flLabel ?? false
    let classComp = 'range-slider'
    let className = classComp
    if(modify){
    className += ' '+classComp+'_'+modify}
    if(addClass){
    className += ' '+addClass}

  div(class=className+' js-'+classComp)
    div(class=classComp+'__wrap') 
    
      div(class=classComp+'__header')
        - if(!flLabel){
          p(class=classComp+'__label')= label
        -}
        span(class=classComp+'__value'+' js-'+classComp+'__value')
      input(class=classComp+'__input'+' js-'+classComp+'__input' type='hidden' name='price' value='' data-min='1000' data-from='5000' data-to='10000' data-max='15000')
