mixin buttons(options)
  -
    let text = options.text ?? ''
    let atrr = options.atrr ?? ''
    let link = options.link ?? ''
    let type = options.type ?? ''
    let modify = options.modify ?? []
    let addClass = options.class ?? ''
    let classComp = 'buttons'
    let className = classComp
    if(modify){
      for(let item of modify)
    className += ' '+classComp+'_'+item
    }
    if(addClass){
    className += ' '+addClass}
    
  case type
    when 'link'
      a(class=className href=link)=text
    when 'button'
      button(class=className)=text
    when 'btn-popup'
      button(class=className aria-haspopup aria-expanded='false')=text
    when 'submit'
      button(class=className type='submit')=text
        img(class=classComp+'__icon' src=require('@com/buttons/img/arrow_forward.svg').default)
    