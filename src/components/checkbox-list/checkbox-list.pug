mixin checkbox-list(options)
  -
    const masWord = options.masWord ?? []
    const masText = options.masText ?? []
    const legend = options.legend ?? ''
    const modify = options.modify ?? ''
    const addClass = options.class ?? ''
    const flLabel = options.flLabel ?? false
    const click = options.click ?? false
    const classComp = 'checkbox-list'
    let className = classComp
    if(modify){
    className += ' '+classComp+'_'+modify}
    if(addClass){
    className += ' '+addClass}
    
  div(class=className+' js-'+classComp)
    fieldset(class=classComp+'__items')

      -if(!flLabel){
        -if(!click){
          legend(class=classComp+'__header'+' js-'+classComp+'__header' tabindex='0' aria-label='раскрывающийся список')= legend
              img(class=classComp+'__tip'+' js-'+classComp+'__tip' src=require('@com/checkbox-list/img/tip.svg').default alt='угалок')
        -} else {
          legend(class=classComp+'__header'+' js-'+classComp+'__header')= legend
        -}  
      -}
      
      div(class=classComp+'__wrap'+' js-'+classComp+'__wrap')
        each value, index in masWord
          label(class=classComp+'__label')= value
            input(class=classComp+'__input' type='checkbox' name=value)
            span(class=classComp+'__bef')
            -if(masText.length)
              span(class=classComp+'__text')=masText[index]
              