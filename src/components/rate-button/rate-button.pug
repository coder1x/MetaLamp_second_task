mixin rate-button(options)
  -
    let label = options.label ?? ''
    let name = options.name ?? ''
    let modify = options.modify ?? ''
    let addClass = options.class ?? ''
    let flLabel = options.flLabel ?? false
    let classComp = 'rate-button'
    let className = classComp
    if(modify){
    className += ' '+classComp+'_'+modify}
    if(addClass){
    className += ' '+addClass}
  div(class=className)
    fieldset(class=classComp+'__stars') 
      - if(!flLabel){
      legend(class=classComp+'__header')= label
      -}
      div(class=classComp+'__group')
        input(class=classComp+'__star' type='radio' name=name value='1' aria-label='Ужасно')
        input(class=classComp+'__star' type='radio' name=name value='2' aria-label='Плохо')
        input(class=classComp+'__star' type='radio' name=name value='3' aria-label='Нормально')
        input(class=classComp+'__star' type='radio' name=name value='4' aria-label='Хорошо')
        input(class=classComp+'__star' type='radio' name=name value='5' aria-label='Отлично')
