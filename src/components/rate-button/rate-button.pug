mixin rate-button(options)
  -
    const label = options.label ?? ''
    const name = options.name ?? ''
    const modifier = options.modifier ?? ''
    const addClass = options.class ?? ''
    const isLabeled = options.isLabeled
    const classComponent = 'rate-button'
    let className = classComponent
    if(modifier){
    className += ` ${classComponent}_${modifier}`}
    if(addClass){
    className += ` ${addClass}`}

    labels = [
    'Ужасно',
    'Плохо', 
    'Нормально', 
    'Хорошо', 
    'Отлично', 
    ]

  div(class=className)
    fieldset(class=`${classComponent}__stars`)
      - if(!isLabeled){
      legend(class=`${classComponent}__header`)= label
      -}
      
      div(class=`${classComponent}__group`)
        - for(let i=0; i<labels.length; i++)  {
          input(class=`${classComponent}__star` type='radio' name=name value=i+1 aria-label=labels[i])
        -}