mixin toggle-buttons(options)
  -
    const header = options.header ?? ''
    const label = options.label ?? ''
    const modifier = options.modifier ?? ''
    const addClass = options.class ?? ''
    const isLabeled = options.isLabeled
    const classComponent = 'toggle-buttons'
    let className = classComponent
    if(modifier){
    className += ` ${classComponent}_${modifier}`}
    if(addClass){
    className += ` ${addClass}`}

  div(class=className)
    - if(!isLabeled){
    p(class=`${classComponent}__header`)= header
    -}
    
    div(class=`${classComponent}__tog`)
      label(class=`${classComponent}__label`)= label
        input(class=`${classComponent}__input` type='checkbox' name='toggle')
        span(class=`${classComponent}__bef`)

