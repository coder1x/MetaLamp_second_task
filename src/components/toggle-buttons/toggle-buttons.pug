mixin toggle-buttons(options)
	-
		let header = options.header ?? ''
		let label = options.label ?? ''
		let modif = options.modif ?? ''
		let addClass = options.class ?? ''
		let flLabel = options.flLabel ?? false
		let classComp = 'toggle-buttons'
		let className = classComp
		if(modif){
		className += ' '+classComp+'_'+modif}
		if(addClass){
		className += ' '+addClass}
	div(class=className)
		- if(!flLabel){
		p(class=classComp+'__header')= header
		-}
		div(class=classComp+'__tog')
			label(class=classComp+'__label')= label
				input(class=classComp+'__input' type='checkbox' name='toggle')
				span(class=classComp+'__bef' tabindex='0')

