extends ../layout/layout.pug
include ../../components/room-card/room-card.pug
include ../../components/pagination/pagination.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/drop-down/drop-down.pug
include ../../components/range-slider/range-slider.pug
include ../../components/checkbox-list/checkbox-list.pug
include ../../components/buttons/buttons.pug

block title 
  title search room
block content
  main.search-room-content
    .search-room-content__wrap
      section.search-room-filter
        .search-room-filter__date-wrap
          +date-dropdown({
            label: ['даты пребывания в отеле'],
            value: '19.08.2022 - 23.08.2022',
            modify: 'filter',
            filter: true
          })
        .search-room-filter__guests-wrap
          -
            let masWord = [
            ['взрослые', 'дети', 'младенцы'], 
            ['гость,гостя,гостей', 
            'гость,гостя,гостей', 
            'младенец,младенца,младенцев']]
          +drop-down({
            label:'гости',
            value: 'Сколько гостей',
            name:'Guest',
            masWord:masWord,
            maxValue:['10','12','5'],
            button:true
          })
        .search-room-filter__price-wrap
          +range-slider({
            label:'диапазон цены'
          })
          p.search-room-filter__price-text Стоимость за сутки пребывания в номере
        .search-room-filter__regulations-wrap
          - 
            masWord = [
            'Можно курить', 'Можно с питомцами', 
            'Можно пригласить гостей (до 10 человек)']
          +checkbox-list({
            masWord:masWord,
            legend:'правила дома',
            click: true,
            modify:'visibleBut'
          })
        .search-room-filter__availability-wrap
          - 
            masWord = [
            'Широкий коридор', 
            'Помощник для инвалидов']
            masText = [
            'Ширина коридоров в номере не менее 91 см.',
            'На 1 этаже вас встретит специалист  и проводит до номера.']
          +checkbox-list({
            masWord:masWord,
            masText:masText,
            legend:'доступность',
            click: true,
            modify:'visibleBut',
            class:'checkbox-list_rich'
          })
        .search-room-filter__facilities-wrap
          - 
            masWord = [
            ['спальни', 'кровати', 'ванные комнаты'], 
            ['спальня,спальни,спален', 
            'кровать,кровати,кроватей', 
            'ванная комната,ванные комнаты,ванных комнат'] ]
          +drop-down({
            label:'удобства номера',
            value:'Сколько спален',
            name:'Rooms',
            masWord:masWord,
            maxValue:['5','8','4'],
            modify:'sharp'
          })
        .search-room-filter__additional-amenities-wrap
          - 
            masWord = [
            'Завтрак', 'Письменный стол', 
            'Стул для кормления','Кроватка','Телевизор',
            'Шампунь','Телевизор','Шампунь']
          +checkbox-list({
            masWord:masWord,
            legend:'дополнительные удобства',
          })
      .search-room-content__button-wrap
        +buttons({
            text:'Фильтр номеров',
            type:'btn-popup',
            modify:['link']
          })
      section.search-room-cards
        h1.search-room-cards__header Номера, которые мы для вас подобрали
        ul.search-room-cards__cards
          - for(let i=0; i<12; i++){
            li.search-room-cards__card
              +room-card({
                rateName:'room-'+i,
                number:'888',
                lux:true,
                price:'9 990',
                reviews:'145'
              })
          -}
        .search-room-cards__pagination
          +pagination({
            flLabel:true
          })
