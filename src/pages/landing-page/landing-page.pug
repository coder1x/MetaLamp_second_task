include ../../components/header/header.pug
include ../../components/footer/footer.pug
include ../../components/search-room/search-room.pug

doctype html
html(lang='ru')
	title= htmlWebpackPlugin.options.title
	body.landing-page
		+header({})
		.landing-page__wrap
			main.landing-content
				section.landing-content__search-room
					.relation-ratio
					img(class='landing-content__background' src=require('@img/content/image 3.png').default, alt='')
					.landing-content__search-room-wrap
						.landing-content__top
							.landing-content__top-wrap
								+search-room({
									header:'Найдём номера под ваши пожелания'
								})
						.landing-content__bottom
							p(class='landing-content__bottom-text') Лучшие номера для вашей работы, отдыха и просто вдохновения
		+footer({})