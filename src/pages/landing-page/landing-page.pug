extends ../layout/layout.pug
include ../../components/search-room/search-room.pug

block title 
  title landing page
block content
  main.landing-content
    -const roomMobileXxs = require('./img/room-mobile-xxs.webp')
    -const roomMobileSm = require('./img/room-mobile-sm.webp')
    -const room = require('./img/room.webp');
    
    section.landing-content__search-room
      .landing-content__relation-ratio

      picture
        source(media="(max-width: 574px)" srcset=roomMobileXxs)
        source(media="(max-width: 766px)" srcset=roomMobileSm)
        source(media="(min-width: 767px)" srcset=room)
        img(
          class='landing-content__background'
          src=room 
          alt="Лучшие номера для вашей работы, отдыха и просто вдохновения"
          )


      .landing-content__search-room-wrapper
        .landing-content__top
          .landing-content__top-wrapper
            +search-room({
              header:'Найдём номера под ваши пожелания'
            })
            
        .landing-content__bottom
          p(class='landing-content__bottom-text') Лучшие номера для вашей работы, отдыха и просто вдохновения
